@model Quizapp.Models.ViewModels.RegisterViewModel
@{ ViewData["Title"] = "Register"; }
<div class="row justify-content-center mt-5">
    <div class="col-md-4 card p-4 shadow-sm">
        <h2 class="text-center mb-3">Register</h2>
        <form asp-action="Register" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="mb-3"><label>Email</label><input asp-for="Email" class="form-control" /></div>
            <div class="mb-3"><label>Password</label><input asp-for="Password" class="form-control" /></div>
            <div class="mb-3"><label>Confirm Password</label><input asp-for="ConfirmPassword" class="form-control" /></div>
            <button type="submit" class="btn btn-success w-100">Register</button>
        </form>
    </div>
</div>