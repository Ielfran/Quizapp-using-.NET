@model List<Quizapp.Models.QuestionModel>
@{ ViewData["Title"] = "Dashboard"; }

<div class="d-flex justify-content-between align-items-center mb-4 mt-4">
    <h1>My Questions</h1>
    <div>
        <a asp-action="Play" class="btn btn-primary">Play Quiz</a>
        <a asp-action="Create" class="btn btn-success">Add Question</a>
    </div>
</div>

@if (ViewBag.Error != null) { <div class="alert alert-warning">@ViewBag.Error</div> }

@if (!Model.Any()) { <div class="alert alert-info">No questions found. Add some to start!</div> }
else
{
    <table class="table table-hover">
        <thead class="table-light"><tr><th>Question</th><th class="text-end">Action</th></tr></thead>
        <tbody>
            @foreach (var q in Model)
            {
                <tr>
                    <td>@q.QuestionText</td>
                    <td class="text-end">
                        <form asp-action="Delete" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@q.Id" />
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}