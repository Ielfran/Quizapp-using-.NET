@model List<Quizapp.Models.QuestionModel>

@{
    ViewData["Title"] = "Quiz Dashboard";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Quiz Manager</h1>
        <div>
            <a asp-controller="Quiz" asp-action="Play" class="btn btn-primary btn-lg">
                <i class="bi bi-play-fill"></i> Play Quiz
            </a>
            <a asp-controller="Quiz" asp-action="Create" class="btn btn-success btn-lg">
                <i class="bi bi-plus-lg"></i> Add Question
            </a>
        </div>
    </div>

    @if (ViewBag.Error != null)
    {
        <div class="alert alert-warning">@ViewBag.Error</div>
    }

    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <h5 class="mb-0">Question Bank (@Model.Count)</h5>
        </div>
        <div class="card-body p-0">
            @if (!Model.Any())
            {
                <div class="p-4 text-center text-muted">
                    No questions yet. Click "Add Question" to start!
                </div>
            }
            else
            {
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Question</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var q in Model)
                        {
                            <tr>
                                <td>@q.Id</td>
                                <td>@q.QuestionText</td>
                                <td class="text-end">
                                    <form asp-action="Delete" method="post" style="display:inline;">
                                        <input type="hidden" name="id" value="@q.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this?');">
                                            Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>